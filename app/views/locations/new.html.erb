<section data-controller="new-map" class="w-full h-screen relative">
  <div
    class="
      absolute bottom-0 md:bottom-5 left-1/2 transform -translate-x-1/2 z-50 rounded
      shadow p-4 bg-gray-100 w-full md:w-2/3 xl:w-1/2 2xl:w-1/3
    "
  >
    <p class="pb-4">
      Enter a name for your location. Click on the map to set location
      coordinates.
    </p>
    <%= form_with(model: @location, class: "grid grid-cols-1 auto-rows-min items-end md:grid-cols-3 gap-y-1 gap-x-2", data: { 'new-map-target': 'form'}) do |form| %>
      <%= form.label :name %>
      <%= form.text_field :name,
                      class:
                        "block shadow rounded border border-gray-200 outline-none px-2 py-1 w-full md:order-1" %>

      <%= form.label :expiry, "Expiry (in minutes)", class: "md:col-span-2" %>
      <%= form.number_field :expiry,
                        class:
                          "block shadow rounded border border-gray-200 outline-none px-2 py-1 w-full md:order-1" %>

      <%= form.hidden_field :location %>

      <%= form.submit class:
                    "mt-2 inline-block shadow rounded py-2 px-3 bg-white border-gray-500 cursor-pointer self-end md:order-last disabled:opacity-50 disabled:cursor-not-allowed",
                  disabled: true,
                  id: "new_map_submit" %>
    <% end %>
  </div>
</section>
